prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
sysconfdir = @sysconfdir@
sharedstatedir = @sharedstatedir@
CC=gcc
CFLAGS=-c -Wall -g
LDFLAGS=
SOURCES=main.c daemon.c server.c
OBJECTS=$(SOURCES:.c=.o)
EXECUTABLE=sntpd

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CC) $(LDFLAGS) -o $@ $(OBJECTS)

.c.o:
	$(CC) $(CFLAGS) -o $@ $<

install:
	mkdir -p $(bindir)
	install $(EXECUTABLE) $(DESTDIR)$(bindir)/$(EXECUTABLE)

uninstall:
	rm $(DESTDIR)$(bindir)/$(EXECUTABLE)

clean:
	rm -rf *.o $(EXECUTABLE)
